# frozen_string_literal: true

source "https://rubygems.org"

# Specify Ruby version
ruby "3.2.8"

# Sinatra framework
gem "sinatra", "~> 4.0"

# SQLite database
gem "sqlite3", "~> 1.6"

# Server for running the application
gem "puma", "~> 6.0"

# Development dependencies
group :development do
  gem 'rerun', '~> 0.14'  # Auto-reload the server on changes
  gem 'rubocop', '~> 1.57'  # Code quality checker
  gem 'yard', '~> 0.9'     # Documentation generation tool
  gem 'launchy', '~> 2.5'  # Cross-platform helper for opening web browser
end
