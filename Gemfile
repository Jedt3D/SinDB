# frozen_string_literal: true

source 'https://rubygems.org'

# Specify Ruby version
ruby '3.2.8'

# Sinatra framework
gem 'sinatra', '~> 4.0'

# SQLite database
gem 'sqlite3', '~> 1.6'

# Server for running the application
gem 'puma', '~> 6.0'

# Development dependencies
group :development do
  gem 'rerun', '~> 0.14'  # Auto-reload the server on changes
end